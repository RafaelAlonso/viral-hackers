<div class="container">
  <h1>New Script</h1>

  <%= simple_form_for @script do |f| %>
    <div class="form-box">
      <%= f.input :category_id, collection: Category.pluck(:name, :id) %>
      <%= f.input :duration, collection: [30, 60, 120], class: 'field-box'%>
      <%= f.input :mood, collection: Script.moods.keys, class: 'field-box'%>
      <%= f.input :target_audience, class: 'field-box' %>
      <%= f.input :description, class: 'field-box'%>
      <div class='btn-login'>
        <span class="new_script"></span><span class="new_script"></span><span class="new_script"></span><span class="new_script"></span>
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>
